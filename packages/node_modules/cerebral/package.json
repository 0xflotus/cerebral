{
    "name": "cerebral",
    "version": "0.0.0-next",
    "description": "A state controller with its own debugger",
    "main": "index.js",
    "module": "./es/index.js",
    "jsnext:main": "./es/index.js",
    "typings": "./index.d.ts",
    "author": "Christian Alfoni <christianalfoni@gmail.com>",
    "contributors": [ "Aleksey Guryanov <gurianov@gmail.com>" ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cerebral/cerebral.git"
    },
    "bugs": {
        "url": "https://github.com/cerebral/cerebral/issues"
    },
    "homepage": "https://www.cerebraljs.com",
    "dependencies": {
        "es6-error": "^4.0.2",
        "function-tree": "next"
    },
    "scripts": {
        "build": "run-p build:*",
        "build:cjs": "cross-env BABEL_ENV=cjs babel src/ --out-dir=lib/ -s",
        "build:es": "cross-env BABEL_ENV=es babel src/ --out-dir=es/ -s",
        "coverage": "npm run test -- --coverage",
        "prepublish": "npm run build",
        "test": "cross-env BABEL_ENV=test jest",
        "test:watch": "npm run test -- --watch"
    },
    "jest": {
      "collectCoverageFrom": [
        "src/**/*.js"
      ],
      "coveragePathIgnorePatterns": [
        "**/*.test.js",
        "<rootDir>/node_modules"
      ],
      "coverageReporters": [
        "json",
        "lcov"
      ],
      "haste": {
        "providesModuleNodeModules": [
          "cerebral"
        ]
      },
      "testPathIgnorePatterns": [
        "<rootDir>/node_modules"
      ],
      "transformIgnorePatterns": [
        "<rootDir>/node_modules"
      ]
    }
}
